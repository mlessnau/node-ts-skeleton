{
  "name": "node-ts-skeleton",
  "version": "1.0.0",
  "description": "node.js typescript project skeleton",
  "main": "dist/src/app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && node_modules/.bin/tsc -p .",
    "start": "node dist/src/app.js",
    "test": "npm run build && node_modules/.bin/mocha --opts mocha.opts",
    "test:coverage": "NODE_ENV=test ./node_modules/.bin/nyc npm test"
  },
  "author": "Michael Le√ünau <michael.lessnau@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/istanbul": "^0.4.29",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "nyc": "^10.2.0",
    "ts-node": "^3.0.2",
    "typescript": "^2.2.2",
    "typings": "^2.1.0"
  },
  "nyc": {
    "report-dir": "./dist/coverage",
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": ["src/*.ts", "src/**/*.ts"],
    "exclude": ["typings"],
    "extension": [".ts"],
    "require": ["ts-node/register"],
    "reporter": ["json", "html", "text"],
    "all": true,
    "check-coverage": true
  }
}
